modules = ["nodejs-20", "python-3.12", "web"]

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Start Application"

[[workflows.workflow]]
name = "Start Application"
author = 46291033
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && uvicorn server:app --host 0.0.0.0 --port 8000 --reload"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm run dev -- --host 0.0.0.0 --port 5000"
